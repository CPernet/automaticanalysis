<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='subject' desc='Use the Freesurfer MRI_Watershed' modality='MRI'>
            
            <qsub>
                <timeBase>0.15</timeBase>
                <memoryBase>0.5</memoryBase>
            </qsub>
            
            <permanenceofoutput>1</permanenceofoutput>
            
            <inputstreams>
                <stream>structural</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>structural</stream>                
                <stream>BETmask</stream>
            </outputstreams>
            
            <!-- Do we apply the brain masking on the structural...? 0 - NO; 1 - YES -->
            <maskBrain>1</maskBrain>
            
            <!-- This specifies which structural we want to use, typically the first, but can be changed -->
            <structural>1</structural>
            
            <!-- This specifies which MRI watershed options we want to use -->
            <extraoptions>-atlas</extraoptions>
            
            <!-- Do we run gcut to clean up the skull stripping? -->
            <gcut>1</gcut>
            
            <!-- Diagnostic videos? Verbosity? -->
            <diagnostic>0</diagnostic>
            <verbose>0</verbose>
            
        </currenttask>
    </tasklist>
</aap>