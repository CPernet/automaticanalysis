<aap>
    <tasklist>
        <currenttask domain='subject' desc='ANTS coregistration (extended a la DCCN)' modality='MRI'>
            
            <qsub>
                <timeBase>0.5</timeBase>
                <memoryBase>0.2</memoryBase>
            </qsub>
            
            <permanenceofoutput>1</permanenceofoutput>
            
            <inputstreams>
                <stream>epi</stream>
                <stream>meanepi</stream>  
                <stream>structural</stream>  
            </inputstreams>
            
            <outputstreams>
                <stream>epi</stream>
                <stream>meanepi</stream> 
                <stream>structural</stream>
            </outputstreams>
            
            <structural>1</structural>
            
            <!-- Parameters for that metric -->
            <parameters>32</parameters> 
            
            <!-- Extra options! -->
            <extraoptions>--use-Histogram-Matching  --number-of-affine-iterations 10000x10000x10000x10000x10000 --MI-option 32x16000</extraoptions>
            
            <diagnostic>1</diagnostic>
            
        </currenttask>
    </tasklist>
