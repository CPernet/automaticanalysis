<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='session' desc='High pass filter the EPI images' modality='MRI'>
            
            <qsub>
                <timeBase>1</timeBase>
                <memoryBase>1</memoryBase>
            </qsub>
            
            <permanenceofoutput>1</permanenceofoutput>
            
            <inputstreams>
                <stream>epi</stream>
                <stream>epi_header</stream>
            </inputstreams>
            <outputstreams>
                <stream>epi</stream>
            </outputstreams>
            
            <!-- Type of high pass filter: detrend, spm, butterworth -->
            <HFtype>spm</HFtype>
            
            <!-- Temporal parameter for high-pass filter -->
            <HParam desc='High pass filter cutoff, in seconds - as for SPM'>128</HParam>
            
        </currenttask>
    </tasklist>
</aap>
   
